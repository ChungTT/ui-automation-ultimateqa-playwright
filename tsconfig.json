{
  "compilerOptions": {
    "target": "ES2020",                 // biên dịch ra JS mới
    "module": "commonjs",               // dùng cho Node.js
    "strict": true,                     // bật strict mode
    "esModuleInterop": true,            // hỗ trợ import default
    "skipLibCheck": true,               // bỏ qua check .d.ts
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "playwright"],    // hỗ trợ type cho Node và Playwright
    "outDir": "dist"                    // output sau khi build
  },
  "include": ["tests", "utils", "playwright.config.ts"]
}
